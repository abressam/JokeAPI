<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/setup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/punchline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/punchline_text"
        app:layout_constraintEnd_toEndOf="@+id/setup_text"
        app:layout_constraintStart_toStartOf="@+id/setup_text"
        app:layout_constraintTop_toBottomOf="@+id/setup_text" />

    <Button
        android:id="@+id/next_joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/next_joke_text"
        app:layout_constraintEnd_toEndOf="@+id/punchline_text"
        app:layout_constraintStart_toStartOf="@+id/punchline_text"
        app:layout_constraintTop_toBottomOf="@+id/punchline_text" />

</androidx.constraintlayout.widget.ConstraintLayout>